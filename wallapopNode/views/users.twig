{% extends "layout.twig" %}

{% block title %} Lista de usuarios {% endblock %}

{% block main_container %}
    <h1>List of Users</h1>
    <form action="/users/deleteSelected" method="post">
    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <th >  </th>
            <th > Email </th>
            <th > Name </th>
            <th > Surnames </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr style="border: 1px solid black;">
                <td><input type="checkbox" name="selectedUsers" value="{{ user.email }}" /></td>
                <td > {{ user.email }} </td>
                <td > {{ user.name }} </td>
                <td > {{ user.surnames }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="form-group">
        <button id="deleteButton"type="submit" class="btn btn-danger">Eliminar Seleccionados</button>
    </div>
    </form>
    <script>
        document.getElementById("deleteButton").addEventListener("click", function (event) {
            var checkboxes = document.getElementsByName("selectedUsers");
            var checked = false;
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].checked) {
                    checked = true;
                    break;
                }
            }
            if (!checked) {
                event.preventDefault();
                alert("Por favor, seleccione al menos un usuario para eliminar.","My Wallapop: Error");
            }
        });
    </script>
    <!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/users/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}