{% extends "layout.twig" %}
{% block title %} My Purchases {% endblock %}
{% block main_container %}
<h2>My Purchases</h2>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
		<tr>
			<th>Title</th>
			<th>Details</th>
			<th>Price</th>
			<th>Seller</th>
			<th class="col-md-1"></th>
		</tr>
		</thead>
		<tbody>
		{% for purchase in purchases %}
			<tr>
				<td>{{ purchase.title }}</td>
				<td>{{ purchase.details }}</td>
				<td>{{ purchase.price }}</td>
				<td>{{ purchase.author }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	<!-- PaginaciÃ³n mostrar la actual y 2 anteriores y dos siguientes -->
	<div class="row text-center">
		<ul class="pagination">
			{% for page in pages %}
				<li class="page-item" id="pi-{{ page }}">
					<a class="page-link" href="/purchases/?page={{ page }}">{{ page }}</a>
				</li>
			{% endfor %}
			<script>
				$("#pi-"+"{{ currentPage }}").addClass("active");
			</script>
		</ul>
	</div>
</div>
{% endblock %}