{% extends "layout.twig" %}
{% block title %} Mis Compras {% endblock %}
{% block main_container %}
<h2>Mis compras</h2>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
		<tr>
			<th>Titulo</th>
			<th>Detalles</th>
			<th>Precio</th>
			<th class="col-md-1"></th>
		</tr>
		</thead>
		<tbody>
		{% for offer in offers %}
			<tr>
				<td>{{ offer.title }}</td>
				<td>{{ offer.details }}</td>
				<td>{{ offer.price }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}